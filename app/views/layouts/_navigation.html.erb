    <div class="ui tiny menu inverted teal">
      <div class="ui container">
        <%= link_to "Chat", root_path, class: "item teal" %>
        <a class="teal item">Messages</a>
        <div class="right menu">
          <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
              <% if logged_in? %>
                <%= link_to "Log out", logout_path, class: "item", method: :delete %>
              <% else %>
                <%= link_to "Log in", login_path, class: "item" %>
                <%= link_to "Sign up", login_path, class: "item teal" %>
              <% end %>
            </div>
          </div>
          <% if !logged_in? %>
            <div class="item">
              <%= link_to "Log in", login_path, class: "ui primary button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>