<h4 class="ui center aligned header">
  User information
</h4>
<table class="ui single line table teal">
  <thead>
    <tr>
      <th>Userame</th>
      <th>Registration Date</th>
      <th>E-mail address</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.username %></td>
      <td><%= @user.created_at.strftime("%F") %></td>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>
<div class="ui center aligned container">
  <div class="ui buttons">
    <%= link_to 'Update information', edit_user_path(@user), class: "ui teal button" %>
      <div class="or"></div>
    <%= link_to 'Delete your profile', user_path(@user), method: :delete, class: "ui grey button", data: { confirm: "This action is irreversible! Are you sure?"} %>
  </div>
</div>