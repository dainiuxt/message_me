<h3 class="ui center aligned icon header">
  <i class="circular bullhorn icon teal"></i>
  Welcome to the chatroom
</h3>

<div class="ui two column grid">
	<div class="twelve wide column">
		<div class="ui fluid raise card chatbox">
			<div class="content">
				<div class="ui feed">
				  <h4 class="ui header">Chatbox</h4>
				  	<%= render @messages %>
				</div>
			</div>
			<div class="extra content">
				<form class="ui reply form">
					<div class="field">
						<div class="ui fluid icon input">
							<input type="text" placeholder="Enter your message...">
							<i class="icon edit bordered inverted teal"></i>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="four wide column">
		<div class="ui fluid raised card chatbox">
  		<div class="content">
				<div class="ui inverted vertical menu teal">
				  <a class="teal item">Home</a>
				  <a class="teal item">Messages</a>
				  <a class="item teal">Friends</a>
				</div>
			</div>
		</div>
	</div>
</div>